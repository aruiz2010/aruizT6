<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aruizT6.Views.vActEliminar"
             Title="vActEliminar">
    <VerticalStackLayout
        Spacing="25">
        <Label 
            Text="Actualizar / Eliminar"
            FontSize="20"
            HorizontalTextAlignment="Center"/>
        <Entry x:Name="txtCodigo"
               IsReadOnly="True"></Entry>
        <Entry x:Name="txtNombre"
               Placeholder="Nombre"></Entry>
        <Entry x:Name="txtApellido"
       Placeholder="Apellido"></Entry>
        <Entry x:Name="txtEdad"
       Placeholder="Edad"></Entry>
        <Button x:Name="btnActualizar"
                Text="Actualizar Estudiante"
                Clicked="btnActualizar_Clicked"></Button>
        <Button x:Name="btnEliminar"
                Text="Eliminar Estudinte"
                Clicked="btnEliminar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>